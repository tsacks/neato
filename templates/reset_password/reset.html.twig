{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <style>
        #form, .center {
            margin-left: auto;
            margin-right: auto;
        }
    </style>
    <div class="wrapper">
        {{ form_start(resetForm) }}
            <h2>Reset your password</h2>

            <table id="form">
                <tbody>
                   {{ form_row(resetForm.plainPassword) }}
                   {{ form_rest(resetForm) }}
                   <tr>
                        <td></td>
                        <td><input type="submit" value="Reset Password"></td>
                    </tr>
                </tbody>
            </table>

        {{ form_end(resetForm) }}

        <hr>
    </div>
{% endblock %}
